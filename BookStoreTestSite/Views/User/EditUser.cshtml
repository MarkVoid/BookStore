@model BookStore.ViewModels.Users.EditVM
@using BookStore.Entities;
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

    User item = (User)ViewData["item"];
}

<td>
    <fieldset>
        <legend> Form </legend>
        <form action="/User/EditUser" method="post">
            @Html.HiddenFor(m => m.UserId)
            <table>
                <tr>
                    <td>
                        @Html.ValidationMessageFor(m => m.UserId, null, new { style = "color:red" })
                    </td>
                </tr>
                <tr>
                    <td> @Html.LabelFor(m => m.Username) </td>
                    <td>
                        @Html.TextBoxFor(m => m.Username)
                    </td>
                    <td>
                        @Html.ValidationMessageFor(m => m.Username, null, new { style = "color:red" })
                    </td>
                </tr>
                <tr>
                    <td> @Html.LabelFor(m => m.Password) </td>
                    <td>
                        @Html.PasswordFor(m => m.Password)
                    </td>
                    <td>
                        @Html.ValidationMessageFor(m => m.Password, null, new { style = "color:red" })
                    </td>
                </tr>
                <tr>
                    <td> @Html.LabelFor(m => m.FirstName) </td>
                    <td>
                        @Html.TextBoxFor(m => m.FirstName)
                    </td>
                    <td>
                        @Html.ValidationMessageFor(m => m.FirstName, null, new { style = "color:red" })
                    </td>
                </tr>
                <tr>
                    <td> @Html.LabelFor(m => m.LastName) </td>
                    <td>
                        @Html.TextBoxFor(m => m.LastName)
                    </td>
                    <td>
                        @Html.ValidationMessageFor(m => m.LastName, null, new { style = "color:red" })
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" value="Save" />
                    </td>
                    <td>
                        <a href="/User/Index"> Back to list </a>
                    </td>
                </tr>

            </table>

        </form>
    </fieldset>
</td>

