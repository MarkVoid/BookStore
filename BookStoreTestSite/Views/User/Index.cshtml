@using BookStore.Entities;
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<td>
    <h3> My Users </h3>
    <table>
        <tr>
            <td> Id </td>
            <td> Username </td>
            <td> First Name </td>
            <td> Last Name </td>
            <td> ***||*** </td>
        </tr>

        @foreach (User item in (List<User>)ViewData["items"])
        {
            <tr>
                <td>@item.UserId </td>
                <td>@item.Username </td>
                <td>@item.FirstName </td>
                <td>@item.LastName </td>
                <td>
                    <a href="/User/Edit?id=@item.UserId" style="margin:0 10px"> Edit </a>
                    <a href="/User/Delete?id=@item.UserId" style="margin:0 10px"> Delete </a>
                </td>
            </tr>
        }

    </table>
</td>

